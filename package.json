{
    "name": "social-graphics-library",
    "version": "2.0.0-snapshot",
    "description": "A script for generating social media logos and banners",
    "scripts": {
        "dev:build": "webpack",
        "dev:deploy:win": "npm install && npm run version:update:windows && npm run dev:build && npm run dev:test",
        "dev:deploy:linux": "npm install && npm run version:update:linux && npm run dev:build && npm run dev:test",
        "dev:run": "webpack serve",
        "dev:test": "node tests",
        "version:update:windows": "update.sh",
        "version:update:linux": "sh ./update.sh",
        "prod:deploy:win": "npm run dev:deploy:win && npm publish",
        "prod:deploy:linux": "npm run dev:deploy:linux && npm publish"
    },
    "browser": "./dist/sgl.bundle.js",
    "main": "./dist/sgl.bundle.js",
    "module": "./src/SocialGraphicsLibrary.ts",
    "type": "commonjs",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/JosunLP/Social-graphics-library"
    },
    "keywords": [
        "sgl",
        "fearnixx",
        "josunlp",
        "fngg",
        "image-processing",
        "gaming",
        "community",
        "gaming community",
        "typescript",
        "javascript",
        "front-end",
        "library",
        "svg",
        "graphics",
        "social-media",
        "webp"
    ],
    "author": "josunlp",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JosunLP/Social-graphics-library/issues"
    },
    "homepage": "https://social-graphics-library.net/",
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/preset-env": "^7.13.9",
        "@types/node": "^14.14.32",
        "@types/offscreencanvas": "^2019.6.2",
        "babel-loader": "^8.2.2",
        "buffer": "^6.0.3",
        "canvas": "^2.7.0",
        "jsdom": "^16.5.0",
        "jsdom-global": "^3.0.2",
        "ts-loader": "^8.0.17",
        "typescript": "^4.2.3",
        "webpack": "^5.24.4",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.1",
        "worker-loader": "^3.0.8"
    }
}
